<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/darkColor"
    android:orientation="horizontal"
    android:id="@+id/sj_team_tv"
    android:weightSum="14">
    <!--水平-->
    <!--名次-->
    <TextView
        android:id="@+id/sj_team_tv1"
        style="@style/recyclerView"
        android:layout_weight="1"/>

    <!--球队-->
    <TextView
        android:id="@+id/sj_team_tv2"
        style="@style/recyclerView"
        android:layout_weight="5"
        android:text="球队"/>
    <!--场-->
    <TextView
        android:id="@+id/sj_team_tv3"
        style="@style/recyclerView"
        android:text="场"
        android:layout_weight="1" />
    <!--胜-->
    <TextView
        android:id="@+id/sj_team_tv4"
        android:text="胜"
        style="@style/recyclerView"
        android:layout_weight="1" />
    <!--平-->
    <TextView
        android:id="@+id/sj_team_tv5"
        android:text="平"
        style="@style/recyclerView"
        android:layout_weight="1" />
    <!--负-->
    <TextView
        android:id="@+id/sj_team_tv6"
        android:text="负"
        style="@style/recyclerView"
        android:layout_weight="1" />
    <!--进/失-->
    <TextView
        android:id="@+id/sj_team_tv7"
        android:text="进/失"
        style="@style/recyclerView"
        android:layout_weight="2" />
    <!--积分-->
    <TextView
        android:id="@+id/sj_team_tv8"
        android:text="积分"
        style="@style/recyclerView"
        android:layout_weight="2" />
</LinearLayout>
